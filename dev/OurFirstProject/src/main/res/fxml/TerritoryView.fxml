<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Region?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.mavid.gui.controller.TerritoryController"
            minWidth="500">
    <top>
        <HBox>
            <TextField fx:id="number" minWidth="100" minHeight="100" maxWidth="300" maxHeight="300" prefWidth="100"
                       prefHeight="100" text="1">
                <font>
                    <Font name="Comic Sans" size="36"/>
                </font>
            </TextField>
            <Region HBox.hgrow="SOMETIMES" />
            <TextField>
                <font>
                    <Font name="Comic Sans" size="18"/>
                </font>
            </TextField>
        </HBox>
    </top>

</BorderPane>